@model IEnumerable<MVC_CRUD.Models.Event>
@using MVC_CRUD.Models

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        @foreach (var Event in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/events/@Event.ImagePath" class="card-img-top" alt="@Event.ImagePath">
                    <div class="card-body">
                        <h5 class="card-title">@Event.Title</h5>
                        <p class="card-text">
                            <strong>Date:</strong> @Event.Date.ToString("dd.MM.yyyy")<br />
                            <strong>Artist:</strong> @Event.Artist<br />
                            <strong>Tickets Available:</strong> @Event.TicketsLeft / @Event.TotalTickets
                        </p>
                        <a asp-action="DetailsEvent" asp-controller="Events" asp-route-id="@Event.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>