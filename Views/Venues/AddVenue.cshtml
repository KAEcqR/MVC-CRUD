<h3 class="text-center">Add new event</h3>
<form asp-action="AddVenue" method="post">
    <div class="row m-2">
        <label asp-for="Name" class="col-3 text-end"></label>
        <input asp-for="Name" class="col-6"/>
        <span asp-validation-for="Name" class="text-danger col-3"></span>
    </div>
    <div class="row m-2">
        <label asp-for="Location" class="col-3 text-end"></label>
        <input asp-for="Location" class="col-6"/>
        <span asp-validation-for="Location" class="text-danger col-3"></span>
    </div>
    <div class="row m-2">
        <label asp-for="Capacity" class="col-3 text-end"></label>
        <input asp-for="Capacity" type="number" class="col-6" />
        <span asp-validation-for="Capacity" class="text-danger col-3"></span>
    </div>
    <div class="row m-2">
        <label asp-for="Description" class="col-3 text-end"></label>
        <input asp-for="Description" class="col-6"></input>
        <span asp-validation-for="Description" class="text-danger col-3"></span>
    </div>
    <div class="row m-2">
        <input type="submit" value="Save" class="col-6 offset-3 btn btn-primary" />
   </div>
</form>